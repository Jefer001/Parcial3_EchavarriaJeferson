@model WashingCar.DAL.Entities.Service

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro que deseas eliminar este servicio?</h3>
<div>
    <h4>Service</h4>
    <hr />
    
    <partial name="../Shared/PartialViews/_ServiceDetailDelete" />
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
    </form>
</div>
