@model WashingCar.Models.VehicleViewModel

@{
    ViewData["Title"] = "EditVehicle";
}

<h1>Editar</h1>

<h4>Vehículo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditVehicle">

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ServiceId" />
            <input type="hidden" asp-for="CreationDate" />

            <partial name="../Shared/PartialViews/_VehicleCreateEdit" />

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-route-id="@Model?.ServiceId" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}